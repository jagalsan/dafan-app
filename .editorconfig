# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[{*.ats,*.ts}]
ij_typescript_spaces_within_imports = true
ij_typescript_blacklist_imports = rxjs/Rx,node_modules/**/*,@angular/material,@angular/material/typings/**,ng-zorro-antd,ng-zorro-antd/ng-zorro-antd.module

[*.yml]
indent_size = 2
